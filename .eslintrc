{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "$": true,
    "dataLayer": true,
    "valorFrete": true,
    "vtexjs": true,
    "vtxctx": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "overrides": [{
    "files": ["src/assets/js/common/**"],
    "excludedFiles": ["**/*.test.js"]
  }],
  "plugins": ["react"],
  "rules": {
    "react/prop-types": 0,
    "no-inner-declarations": 0
  }
}